<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/default_8dp"
        android:paddingTop="@dimen/default_8dp"
        android:paddingBottom="@dimen/default_8dp"
        android:paddingRight="@dimen/default_16dp"
        android:layout_height="match_parent">
        <odoo.controls.BezelImageView
            android:id="@+id/image_small"
            android:layout_width="40dp"
            android:layout_margin="@dimen/default_8dp"
            app:maskDrawable="@drawable/circle_mask"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/default_8dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/default_8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nameCustomer"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/android_blue_dark"
                    android:textSize="@dimen/default_20dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                <TextView
                    android:id="@+id/addressCustomer"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/android_blue_dark"
                    android:textSize="@dimen/default_16dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                <TextView
                    android:id="@+id/nameTask"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/default_16dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold|italic"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/nameDateStart"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/default_16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textAppearance="?android:attr/textAppearanceLarge" />


                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnDetailTask"
                    android:layout_width="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_action_edit"/>
                <ImageButton
                    android:id="@+id/btnFormulario"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_action_notes_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>