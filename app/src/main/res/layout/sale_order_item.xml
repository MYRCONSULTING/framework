<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:fontFamily="@string/font_normal"
            android:singleLine="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/body_text_1" />

        <TextView
            android:id="@+id/order_lines"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:fontFamily="@string/font_normal"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/body_text_3" />

        <TextView
            android:id="@+id/date_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_condensed"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/android_violet_dark"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/partner_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_normal"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/body_text_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#aaa"
        android:dividerPadding="8dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@string/font_normal"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/theme_primary" />

        <TextView
            android:id="@+id/amount_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:fontFamily="@string/font_normal"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/body_text_2" />

        <TextView
            android:id="@+id/currency_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_normal"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/body_text_2" />
    </LinearLayout>

</LinearLayout>