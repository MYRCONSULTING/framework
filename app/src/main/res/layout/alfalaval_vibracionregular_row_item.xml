<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_8dp"
        android:paddingLeft="@dimen/default_8dp"
        android:paddingRight="@dimen/default_16dp"
        android:paddingTop="@dimen/default_8dp">

        <odoo.controls.BezelImageView
            android:id="@+id/image_small"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/default_8dp"
            app:maskDrawable="@drawable/circle_mask" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/clienteviewlabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@string/font_normal"
                        android:text="@string/label_cliente"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/body_text_4"></TextView>

                    <TextView
                        android:id="@+id/clienteview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@string/font_normal"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/body_text_1"></TextView>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/codigoclientelabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@string/font_normal"
                        android:text="@string/label_codigocliente"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/body_text_4"></TextView>


                    <TextView
                        android:id="@+id/codigoclienteview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@string/font_normal"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/body_text_1"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/numerooslabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@string/font_normal"
                        android:text="@string/label_numeroos"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/body_text_4"></TextView>

                    <TextView
                        android:id="@+id/numeroosview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@string/font_normal"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/body_text_1"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/equipolabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@string/font_normal"
                        android:text="@string/label_equipo"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/body_text_4"></TextView>

                    <TextView
                        android:id="@+id/equipoview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@string/font_normal"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/body_text_1"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/prodnlabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@string/font_normal"
                        android:text="@string/label_prodn"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/body_text_4"></TextView>

                    <TextView
                        android:id="@+id/prodnview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@string/font_normal"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/body_text_1"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/flujolabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@string/font_normal"
                        android:text="@string/label_flujo"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/body_text_4"></TextView>

                <TextView
                    android:id="@+id/flujoview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_normal"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/body_text_1"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/precisionlabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@string/font_normal"
                        android:text="@string/label_precision"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/body_text_4"></TextView>

                    <TextView
                        android:id="@+id/precisionview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@string/font_normal"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/body_text_1"></TextView>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>

